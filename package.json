{
    "name": "gallifreyan",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "lodash": "^4.17.11",
        "react": "^16.7.0",
        "react-dom": "^16.7.0",
        "react-draggable": "^3.1.0",
        "react-scripts-ts": "^3.1.0",
        "react-svg-pan-zoom": "^2.18.0",
        "react-virtualized": "^9.21.0",
        "uuid": "^3.3.2"
    },
    "scripts": {
        "start": "concurrently \"npm run watch-css\" \"npm run start-ts\"",
        "start-ts": "react-scripts-ts start",
        "build-css": "node-sass-chokidar src/sass -o public/css",
        "watch-css": "npm run build-css && node-sass-chokidar src/sass -o public/css --watch --recursive",
        "post-css": "postcss public/css/*.css --dir public/css/ --use autoprefixer",
        "build": "npm run build-css && npm run post-css && react-scripts-ts build",
        "test": "react-scripts-ts test --env=jsdom",
        "eject": "react-scripts-ts eject",
        "pretty-quick": "pretty-quick"
    },
    "devDependencies": {
        "@types/jest": "^23.3.10",
        "@types/lodash": "^4.14.119",
        "@types/node": "^10.12.18",
        "@types/react": "^16.7.17",
        "@types/react-dom": "^16.0.11",
        "@types/react-svg-pan-zoom": "^2.5.6",
        "@types/react-virtualized": "^9.18.11",
        "@types/uuid": "^3.4.4",
        "concurrently": "^4.1.0",
        "husky": "^1.2.1",
        "node-sass-chokidar": "^1.3.4",
        "postcss-cli": "^6.1.0",
        "prettier": "^1.15.3",
        "pretty-quick": "^1.8.0",
        "typescript": "^3.2.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged"
        }
    }
}
